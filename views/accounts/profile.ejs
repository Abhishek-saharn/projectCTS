<% layout('layout') -%>
<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4">

<h3>hello <%= user.profile.name %></h3>
<h4> Email id : <%= user.email %></h4>
</div>
<div class="col-md-6">
  <h2 class="text-center">History</h2>
  <table class="table table-striped sticky-header">
    <thead>
      <tr>
        <th>Code's Name</th>
        <th>Language:</th>
      </tr>
      <tbody>
        <% for(var i = 0; i< user.history.length; i++) {%>
         <tr>
           <td><%= user.history[i].templateName %></td>
           <td><%= user.history[i].templateLanguage %></td>
         </tr>
     <% } %>
   </tbody>
  </thead>
  </table>
</div>

</div>
</div>
