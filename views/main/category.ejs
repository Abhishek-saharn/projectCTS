<% layout('layout') -%>
<div class="container">

  <div class="row">
    <% for(var i=0; i<templates.length;i++) { %>
    <div class="col-md-4">

        <div class="thumbnail">

          <div class="caption">
            <h3 style="color:red"><%= templates[i].name %></h3>
            <h4 style="color:blue"><%= templates[i].category %></h4>
              <p><%= templates[i].code %></p>
          </div>
        </div>
      
    </div>
    <% } %>
  </div>
  </div>
