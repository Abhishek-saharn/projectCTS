<% layout('layout') -%>
<script src="/js/jquery.min.js"></script>
   <div class="row row-content">
          <div class="col-xs-12">
             <h3>Make Notification</h3>
          </div>
           <div class="col-xs-12 col-sm-9">
               <div class="form-horizontal"  >
                   <div class="form-group">
                       <label  class="col-sm-2 control-label">Topic Name</label>
                       <div class="col-sm-10">
                       <input type="text" class="form-control" id="topicid"  value=""  name="topic" required>
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="col-sm-2 control-label">Description</label>
                       <div class="col-sm-10">
                           <textarea style="white-space:pre" class="form-control" id="description" name="description" rows="3" required></textarea>
                       </div>
                   </div>
                  <% if(user.email!="teamwhitetrident@gmail.com"){%>
                   <div class="form-group">
                       <label class="col-sm-2 control-label">Code</label>
                       <div class="col-sm-10">
                           <textarea style="white-space:pre" class="form-control" id="ncode" name="ncode" rows="12" required></textarea>
                       </div>
                   </div>
                   <%}%>
                   <div class="form-group">
                       <div class="col-sm-offset-2 col-sm-10">
                           <button id="submit"  class="btn btn-primary">Broadcast it </button>
                       </div>
                   </div>

               </div>
           </div>
           <div  id="formfeedback" class="modal fade" role="dialog" aria-hidden="true">
               <div class="modal-dialog">
                   <div class="modal-content">
                       <div style="background: #088DA5;color:#fff" class="modal-header">
                               <b>Message</b>
                       </div>
                        <div class="modal-body">
                          <p id="statusofsubmit">S</p>

                       </div>
                        <div id="modal-footer"  class="modal-footer">
                             <button type="button" class="btn btn-default" onclick="redirect()">Close</button>
                       </div>
                   </div>
               </div>
           </div>
            <div class="col-xs-12 col-sm-3">
               <p style="padding:20px;"></p>
           </div>
      </div>
      <% if(user.email!="teamwhitetrident@gmail.com"){%>
      <script type="text/javascript">
      document.getElementById("topicid").disabled = true;
      document.getElementById("topicid").value = localStorage.getItem('selectedText');
    </script>
    <%}%>
    <script type='text/javascript' src="/js/notification.js"></script>
