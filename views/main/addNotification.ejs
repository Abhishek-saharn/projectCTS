<% layout('layout') -%>

   <div class="row row-content">
          <div class="col-xs-12">
             <h3>Make Notification</h3>
          </div>
           <div class="col-xs-12 col-sm-9">
               <form class="form-horizontal"  method = "post">
                   <div class="form-group">
                       <label  class="col-sm-2 control-label">Topic Name</label>
                       <div class="col-sm-10">
                       <input type="text" class="form-control" id="topicid" value=""  name="topic" required>
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="col-sm-2 control-label">Description</label>
                       <div class="col-sm-10">
                           <textarea style="white-space:pre" class="form-control" id="description" name="description" rows="12" required></textarea>
                       </div>
                   </div>
                   <div class="form-group">
                       <div class="col-sm-offset-2 col-sm-10">
                           <button type="submit" class="btn btn-primary">Broadcast it </button>
                       </div>
                   </div>

               </form>
           </div>
            <div class="col-xs-12 col-sm-3">
               <p style="padding:20px;"></p>
           </div>
      </div>
